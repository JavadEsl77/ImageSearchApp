<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_fragments"
    android:orientation="vertical"
    tools:context=".ui.details.DetailsFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ly_toolbar_detail"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center|right"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/image_view_logo_detail"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_logo" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_download"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingStart="15dp"
                                android:paddingEnd="5dp">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/text_view_download"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/string_download_images"
                                    android:textColor="@color/white"
                                    android:textSize="13dp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/image_view_download"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/ic_download_detail" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/image_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            tools:src="@drawable/ic_launcher_background" />

                    </RelativeLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ly_detail_image"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center|right"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_wallpaper"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center|right"
                                android:orientation="horizontal">

                                <ProgressBar
                                    android:id="@+id/progress_bar_wallpaper"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:visibility="gone"
                                    tools:visibility="visible" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/text_view_wallpaper"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/string_wallpaper_images"
                                    android:textColor="@color/white"
                                    android:textSize="13dp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/image_view_wallpaper"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/ic_gallery_detail" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card_line"
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            app:cardBackgroundColor="#ffffff"
                            app:cardCornerRadius="5dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_share"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingEnd="5dp">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/text_view_share"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:gravity="center"
                                    android:text="@string/string_download_share"
                                    android:textColor="@color/white"
                                    android:textSize="13dp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/image_view_share"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/ic_share_detail" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_background_gallery_item"
                    android:gravity="center|right"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingTop="7dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="7dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_title_photo_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center|right"
                        android:text="@string/string_photo_info"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/layout_view_info"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:orientation="vertical"
                            android:padding="7dp"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="4dp"
                                android:gravity="center|right"
                                android:text="@string/string_views_images"
                                android:textColor="@color/purple_200"
                                android:textSize="12dp"
                                app:drawableEndCompat="@drawable/ic_eye"
                                app:drawableTint="@color/purple_200" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_view_photo_views"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center|right"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                android:visibility="gone"
                                tools:text="1546"
                                tools:visibility="visible" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/layout_download_info"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:orientation="vertical"
                            android:padding="7dp"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="4dp"
                                android:gravity="center|right"
                                android:text="@string/string_downloads_images"
                                android:textColor="@color/purple_200"
                                android:textSize="12dp"
                                app:drawableEndCompat="@drawable/ic_downward"
                                app:drawableTint="@color/purple_200" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_view_photo_download"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center|left"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                android:visibility="gone"
                                tools:text="689"
                                tools:visibility="visible" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/layout_like_info"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:orientation="vertical"
                            android:padding="7dp"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="4dp"
                                android:gravity="center|right"
                                android:text="@string/string_likes_images"
                                android:textColor="@color/purple_200"
                                android:textSize="12dp"
                                app:drawableEndCompat="@drawable/ic_like"
                                app:drawableTint="@color/purple_200" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_view_photo_likes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center|left"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                android:visibility="gone"
                                tools:text="689"
                                tools:visibility="visible" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="#d6d6d6" />

                    <LinearLayout
                        android:id="@+id/layout_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|right"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_view_title_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_location"
                            android:drawablePadding="4dp"
                            android:gravity="center|right"
                            android:text="@string/string_photo_location"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_view_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="25dp"
                            android:ellipsize="end"
                            android:gravity="right|top"
                            android:maxLines="2"
                            android:textSize="14dp"
                            android:visibility="gone"
                            tools:text="loacation"
                            tools:visibility="visible" />

                    </LinearLayout>

                    <View
                        android:id="@+id/view_line_camera_location"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="#d6d6d6" />

                    <LinearLayout
                        android:id="@+id/layout_camera_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|right"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_view_title_camera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_camera"
                            android:drawablePadding="7dp"
                            android:gravity="center|right"
                            android:text="@string/string_camera_info"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_view_camera_model"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="25dp"

                            android:ellipsize="end"
                            android:gravity="right|top"
                            android:maxLines="2"
                            android:textSize="14dp"
                            android:visibility="gone"
                            tools:text="camera model"
                            tools:visibility="visible" />

                    </LinearLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="7dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/image_view_profile"
                    android:background="#000"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center|top"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="2dp"
                        tools:background="#80FFFFFF">

                        <ImageView
                            android:id="@+id/image_view_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            tools:src="@drawable/ic_user" />

                    </androidx.cardview.widget.CardView>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_view_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="8dp"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            tools:text="username" />

                        <TextView
                            android:id="@+id/text_view_title_instagram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="8dp"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="instagram"
                            android:textColor="@color/purple_200"
                            android:textSize="11dp"
                            android:visibility="gone"
                            tools:text="instagram"
                            tools:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_view_instagram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:drawableRight="@drawable/ic_arrow_right"
                            android:drawablePadding="4dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:visibility="gone"
                            tools:text="javad_esl"
                            tools:visibility="visible" />


                        <TextView
                            android:id="@+id/text_view_title_bio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="Bio"
                            android:textColor="@color/purple_200"
                            android:textSize="11dp"
                            android:visibility="gone"
                            tools:text="Bio"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/text_view_bio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:visibility="gone"
                            tools:text="Bio data"
                            tools:visibility="visible" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_view_user_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="6dp"
                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                app:spanCount="3"
                tools:itemCount="10"
                tools:listitem="@layout/item_unsplash_user_photo" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        tools:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:lottie_autoPlay="true"
            app:lottie_colorFilter="@color/purple_200"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading"
            app:tint="#fff" />

        <TextView
            android:id="@+id/text_view_network_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/button_retry"
            android:layout_centerHorizontal="true"
            android:text="Check Internet Connection ..."
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/button_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:text="Retry"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>


</RelativeLayout>